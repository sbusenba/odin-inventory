extends layout 

block content 
  h1=title
  form(method="POST" action="" ) 
    label(for='item_image') Image: 
    input#image_input(type="file")
    label(for='item_name') Item Name:
    input#item_name.form-control(type='text' placeholder='Item name' name='item_name' required='true' value=(undefined===item ? '' : item.name) )
    label(for='item_description') Item Description:
    textarea#description.form-control(type='textarea' placeholder='item description' name='item_description' required='true')=undefined===item ? '' : item.description
    div.form-group
      label(for='quantity') Quantity:
      input#quantity.form-control(type='text' name='quantity' value=(undefined===item ? '' : item.quantity) )
      label(for='price') price:
      input#price.form-control(type='text' name='price' value=(undefined===item ? '' : item.price) )
    div.form-group 
      label(for="category") Categories:
        for category in categories 
          input(type="checkbox", name="category", id=category._id, value=category._id, checked =category.checked)
          label(for=category._id) #{category.name}
    button.btn.btn-primary(type='submit') Submit
  if errors
    ul
      for error in errors
        li!= error.msg