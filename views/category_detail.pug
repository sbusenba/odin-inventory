extends layout

block content

  h1 Category: #{category.name}

  div(style='margin-left:20px;margin-top:20px')

    h4 Items

    dl
      each category in category_items
        dt
          a(href=category.url) #{category.name}
        dd #{category.description}

      else
        p This category has no items
  p
    a(href=category.url+'/delete') Delete Category
  p 
    a(href=category.url+'/update') Update Category